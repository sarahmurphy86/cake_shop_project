
<form action="/cakes/<%= @cake.id%>" method="post">

  <label for="name"> Cake Name: </label>
  <input type="text" name="name" id="name" value="<%= @cake.name %>">

  <label for="description"> Description:</label>
  <input type="text" name="description" id="description" value="<%= @cake.description %>">

  <label for="baker">Baker Name:</label>
  <select name="baker_id" id="baker" selected="<%= @cake.baker_id %>" >
    <% for baker in @bakers %>
      <% if baker.id == @cake.baker_id %>
        <option value=<%= baker.id %> selected><%=baker.name %></option>
      <%else  %>
        <option value=<%= baker.id%>><%=baker.name%></option>
        <%end  %>
    <%end  %>
  </select>

  <label for="cake_type">Cake Type:</label>
  <select name="cake_type_id" id="cake_type" selected="<%= @cake.cake_type_id %>" >
    <% for cake_type in @cake_types %>
      <% if cake_type.id == @cake.cake_type_id %>
        <option value=<%= cake_type.id%>
        selected><%=cake_type.type %></option>
      <% else  %>
        <option value=<%= cake_type.id%>><%=cake_type.type%></option>
      <%end  %>
    <%end  %>
  </select>

  <label for="buying_cost"> Buying Cost:</label>
  <input type="number" name="buying_cost" id="buying_cost" min="0" value="<%= @cake.buying_cost %>">

  <label for="retail_price"> Retail Price:</label>
  <input type="number" name="retail_price" id="retail_price" min="0" value="<%= @cake.retail_price %>">

  <label for="quantity"> Quantity:</label>
  <input type="number" name="quantity" id="quantity" min="0" value="<%= @cake.quantity %>">

  <input type="submit" value="Save Changes">

</form>
